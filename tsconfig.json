{ 
  "compilerOptions": { 
    "baseUrl": ".", 
    "paths": { "*": ["types/*"] }, 
    "target": "ES2018",
    "module": "commonjs",
    "sourceRoot": "src", 
    "outDir": "dist", 
    "sourceMap": true, 
    "emitDecoratorMetadata": true, 
    "experimentalDecorators": true, 
    "moduleResolution": "node", 
    "lib": [
      "es2015",
      "dom"
    ]
  }, 
  "include": [ 
    "src/**/*" 
  ], 
  "exclude": [
    ".vscode",
    "test/**/*",
    ".idea",
    ".git",
    "node_modules/**/*",
    "dist",
    ".eslintrc.js"
  ], 
  "compileOnSave": true
}